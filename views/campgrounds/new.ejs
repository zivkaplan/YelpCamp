<% layout('/layouts/boilerplate') -%>
    <div class="row">
        <div class="card shadow">
            <h1 class="card-title text-center mt-3">New Campground</h1>
            <div class="card-body">
                <form action="/campgrounds" method="POST" class="needs-validation" enctype="multipart/form-data"
                    novalidate>

                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name='campground[title]' required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name='campground[location]' required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Price</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="price-label">$</span>
                            <input id="price" type="number" step="0.1" min="0" class="form-control" placeholder="0.00"
                                aria-label="price" name="campground[price]" aria-describedby="price-label" required>
                        </div>

                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description"
                            name='campground[description]'></textarea>
                    </div>
                    <div class="mb-4">
                        <label class="form-label" for="image">Upload images</label>
                        <input class="form-control" type="file" id="image" name='image' multiple>
                    </div>

                    <div class="mb-3">
                        <div class="d-grid gap-3">
                            <button class="btn btn-success">Add campground</button>
                        </div>
                </form>

            </div>
        </div>
    </div>
    </div>